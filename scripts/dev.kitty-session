# Kitty session for Mobile Git Notes dev

launch --type=tab --tab-title "ngrok" --cwd /Users/danielsteman/repos/mobile-git-notes bash -lc "ngrok http 8080"

launch --type=tab --tab-title "backend" --cwd /Users/danielsteman/repos/mobile-git-notes bash -lc "nix develop .#backend --command bash -lc 'cd api && source .venv/bin/activate && fastapi dev app/main.py --port 8080'"

launch --type=tab --tab-title "frontend" --cwd /Users/danielsteman/repos/mobile-git-notes bash -lc "nix develop .#frontend --command bash -lc 'cd mobile-git-notes && npm run start'"
